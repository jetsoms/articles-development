
<h1 align="center">Login</h1>
<div class="login">
<%= form_for(:session, url: login_path, :html => {class: "form-horizontal", role: "form"}) do |f| %>

<div class="form-group">

<div class="control-label col-sm-2">

<%= f.label :name %>

</div>

<div class="col-sm-6">

<%= f.text_field :name, class: "form-control", placeholder: "User name", autofocus: true %>

</div>

</div>
<div class="form-group">

<div class="col-sm-offset-2 col-sm-10">

<%= f.submit "Login", class: 'btn btn-primary btn-lg col-sm-7' %>

</div>

</div>

<% end %>
<div align="center">
    <h4>New user? <%= link_to 'Register' , new_user_path %></h4>
</div>
</div>